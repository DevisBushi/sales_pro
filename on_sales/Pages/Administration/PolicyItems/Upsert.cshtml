@page
@model on_sales.Pages.Administration.PolicyItems.UpsertModel


<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.PolicyItemsObj.PolicyItems.Id != 0)
            {
                <input type = "hidden" asp -for= "PolicyItemsObj.PolicyItems.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-dark">@(Model.PolicyItemsObj.PolicyItems.Id != 0 ? "Perditeso" : "Krijo") Police</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PolicyItemsObj.PolicyItems.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="PolicyItemsObj.PolicyItems.Name" />
                        <span class="text-danger" asp-validation-for="PolicyItemsObj.PolicyItems.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PolicyItemsObj.PolicyItems.Price"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="PolicyItemsObj.PolicyItems.Price" />
                        <span class="text-danger" asp-validation-for="PolicyItemsObj.PolicyItems.Price"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PolicyItemsObj.PolicyItems.Description"></label>
                    </div>
                    <div class="col-9">
                        <textarea class="form-control" asp-for="PolicyItemsObj.PolicyItems.Description" id="txtDesc" style="height:200px;"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PolicyItemsObj.PolicyItems.Image"></label>
                    </div>
                    <div class="col-9">
                        <input type="file" class="form-control" name="files" id="uploadBox" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PolicyItemsObj.PolicyItems.CategoryId"></label>
                    </div>
                    <div class="col-9">
                        @Html.DropDownListFor(m => m.PolicyItemsObj.PolicyItems.CategoryId,
                                                Model.PolicyItemsObj.CategoryList,
                                                "- Zgjidhni nje Kategori -",
                                                new { @class = "form-control" })
                        <span class="text-danger" asp-validation-for="PolicyItemsObj.PolicyItems.CategoryId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PolicyItemsObj.PolicyItems.PolicyTypeId"></label>
                    </div>
                    <div class="col-9">
                        @Html.DropDownListFor(m => m.PolicyItemsObj.PolicyItems.PolicyTypeId,
                                                Model.PolicyItemsObj.PolicyTypeList,
                                                "- Zgjidhni llojin e polices -",
                                                new { @class = "form-control" })
                        <span class="text-danger" asp-validation-for="PolicyItemsObj.PolicyItems.PolicyTypeId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">

                                @if (Model.PolicyItemsObj.PolicyItems.Id != 0)
                                {
                                <button type="submit" class="btn btn-primary form-control">Perditeso</button>
                                }
                                else
                                {
                                    <button type="submit" onclick="return ValidateInput()" class="btn btn-dark form-control">Krijo</button>
                                }

                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-dark form-control">Kthehu</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.PolicyItemsObj.PolicyItems != null)
            {
                <div class="col-4 p-4">
                <img src="@Model.PolicyItemsObj.PolicyItems.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        }


        </div>
        </div>
    </form>

    @section Scripts
{
        <script>
    function ValidateInput() {
        if (document.getElementById("uploadBox").value == "")
        {
            swal("Gabim", "Ju Lutem Zgjidhni imazhin", "error")
                return false;
        }
        return true;
    };
        </script>


    }