@page
@model on_sales.Pages.Customer.Home.IndexModel
@{
    ViewData["Title"] = "Index";
}

@foreach (var category in Model.CategoryList)
{
    @if (Model.PolicyItemsList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-black-50 pl-1"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach(var policyItem in Model.PolicyItemsList.Where(c=> c.CategoryId == category.Id))
                            {
                                <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                                    <div class="card"style="border:2px solid #43ac6a; border-radius:5px;">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary"><b>@policyItem.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between form-control" style="border:0px;">
                                            <div class="col-6 badge badge-warning text-center" style="font-size:14px;">
                                                @policyItem.PolicyType.Name
                                            </div>
                                            <div class="col-6 text-right h4" style="color:maroon;"><b>@policyItem.Price</b></div>
                                        </div>


                                        <a asp-page="Details" class="btn-dark" style="border-radius:2px;" asp-route-id="@policyItem.Id">Detajet</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
}
