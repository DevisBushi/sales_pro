@page
@model RegisterModel
@using Sales.Utility
@{
    ViewData["Title"] = "Register";
}


<form method="post" autocomplete="off" asp-route-returnUrl="@Model.ReturnUrl">

    <div class="py-4 my-4">
        <div asp-validation-summary="ModelOnly"class="text-danger"></div>
        <div class="row form-group">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <h3 class="col-12 text-dark text-center py-4"><strong>Regjistrohu</strong></h3>
                    <hr />
                    <div class="form-row py-2">
                        <div class="col">
                            <div>
                                <input type="text" asp-for="Input.FirstName" autocomplete="off" placeholder="Emri" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div>
                                <input type="text" asp-for="Input.LastName" autocomplete="off" placeholder="Mbiemri" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="py-2">
                        <div>
                            <input type="email" asp-for="Input.Email" autocomplete="off" placeholder="Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <div>
                                <input type="password" asp-for="Input.Password" autocomplete="off" placeholder="Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="py-2">
                            <div>
                                <input type="password" asp-for="Input.ConfirmPassword" autocomplete="off" placeholder="Password" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="py-2">
                            <div>
                                <input type="text" asp-for="Input.PhoneNumber" autocomplete="off" placeholder="Telefon" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="py-2">
                                <input type="radio" name="rdUserRole" value="@SD.ApproverRole" /> @SD.ApproverRole
                                
                                <input type="radio" name="rdUserRole" value="@SD.FrontDeskRole" /> @SD.FrontDeskRole
                                
                                <input type="radio" name="rdUserRole" value="@SD.ManagerRole" /> @SD.ManagerRole
                            </div>
                            <div class="py-2">
                                <button type="submit" class="btn btn-primary form-control">Regjistrohu</button>
                            </div>
                            <hr />
                            <p>Duke klikuar <em>Regjistrohu</em> ju pranoni <a href="/Privacy" target="_blank">Kushtet</a> tona</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>





    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use another service to register.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
